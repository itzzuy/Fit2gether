// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ==================== USER & AUTHENTICATION ====================

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  isActive  Boolean  @default(true)
  isVerified Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  profile           Profile?
  sentMatches       Match[]           @relation("SentMatches")
  receivedMatches   Match[]           @relation("ReceivedMatches")
  sentMessages      Message[]         @relation("SentMessages")
  receivedMessages  Message[]         @relation("ReceivedMessages")
  workoutLogs       WorkoutLog[]
  goals             Goal[]
  availabilities    Availability[]
  notifications     Notification[]
  conversations     ConversationParticipant[]
  blockedUsers      BlockedUser[]     @relation("BlockingUser")
  blockedByUsers    BlockedUser[]     @relation("BlockedByUser")
  reports           Report[]          @relation("ReportingUser")
  reportedBy        Report[]          @relation("ReportedUser")
}

// ==================== USER PROFILE ====================

model Profile {
  id              String   @id @default(uuid())
  userId          String   @unique
  firstName       String?
  lastName        String?
  bio             String?  @db.Text
  avatarUrl       String?
  coverPhotoUrl   String?
  dateOfBirth     DateTime?
  gender          Gender?
  location        String?
  latitude        Float?
  longitude       Float?
  maxDistance     Int      @default(50) // km for partner search
  
  // Fitness-specific fields
  fitnessLevel    FitnessLevel @default(BEGINNER)
  yearsOfExperience Int?
  height          Float?    // in cm
  weight          Float?    // in kg
  
  isProfileComplete Boolean @default(false)
  isPublic          Boolean @default(true)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  workoutPreferences WorkoutPreference[]
  fitnessGoals      FitnessGoalPreference[]
  equipmentAccess   EquipmentAccess[]
}

enum Gender {
  MALE
  FEMALE
  NON_BINARY
  PREFER_NOT_TO_SAY
}

enum FitnessLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

// ==================== WORKOUT PREFERENCES ====================

model WorkoutType {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  iconUrl     String?
  category    WorkoutCategory
  createdAt   DateTime @default(now())

  // Relations
  preferences WorkoutPreference[]
  workoutLogs WorkoutLog[]
}

enum WorkoutCategory {
  STRENGTH
  CARDIO
  FLEXIBILITY
  SPORTS
  MARTIAL_ARTS
  OUTDOOR
  GROUP_FITNESS
  MIND_BODY
  OTHER
}

model WorkoutPreference {
  id            String   @id @default(uuid())
  profileId     String
  workoutTypeId String
  skillLevel    FitnessLevel @default(BEGINNER)
  isPrimary     Boolean  @default(false) // Main workout interest
  createdAt     DateTime @default(now())

  // Relations
  profile     Profile     @relation(fields: [profileId], references: [id], onDelete: Cascade)
  workoutType WorkoutType @relation(fields: [workoutTypeId], references: [id])

  @@unique([profileId, workoutTypeId])
}

// ==================== FITNESS GOALS ====================

model FitnessGoalType {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  category    GoalCategory
  createdAt   DateTime @default(now())

  // Relations
  preferences FitnessGoalPreference[]
  goals       Goal[]
}

enum GoalCategory {
  WEIGHT_LOSS
  MUSCLE_GAIN
  ENDURANCE
  FLEXIBILITY
  STRENGTH
  GENERAL_HEALTH
  SPORTS_SPECIFIC
  REHABILITATION
}

model FitnessGoalPreference {
  id                String   @id @default(uuid())
  profileId         String
  fitnessGoalTypeId String
  priority          Int      @default(1) // 1 = highest priority
  createdAt         DateTime @default(now())

  // Relations
  profile        Profile         @relation(fields: [profileId], references: [id], onDelete: Cascade)
  fitnessGoalType FitnessGoalType @relation(fields: [fitnessGoalTypeId], references: [id])

  @@unique([profileId, fitnessGoalTypeId])
}

// ==================== EQUIPMENT ACCESS ====================

model Equipment {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  category    EquipmentCategory
  createdAt   DateTime @default(now())

  // Relations
  userAccess EquipmentAccess[]
}

enum EquipmentCategory {
  GYM_MEMBERSHIP
  HOME_EQUIPMENT
  OUTDOOR
  BODYWEIGHT_ONLY
  SPECIALIZED
}

model EquipmentAccess {
  id          String   @id @default(uuid())
  profileId   String
  equipmentId String
  createdAt   DateTime @default(now())

  // Relations
  profile   Profile   @relation(fields: [profileId], references: [id], onDelete: Cascade)
  equipment Equipment @relation(fields: [equipmentId], references: [id])

  @@unique([profileId, equipmentId])
}

// ==================== AVAILABILITY SCHEDULE ====================

model Availability {
  id        String   @id @default(uuid())
  userId    String
  dayOfWeek DayOfWeek
  startTime String   // Format: "HH:MM" (24-hour)
  endTime   String   // Format: "HH:MM" (24-hour)
  timezone  String   @default("UTC")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, dayOfWeek, startTime, endTime])
}

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

// ==================== MATCHING SYSTEM ====================

model Match {
  id              String      @id @default(uuid())
  senderId        String
  receiverId      String
  status          MatchStatus @default(PENDING)
  compatibilityScore Float?   // Calculated by matching algorithm
  message         String?     // Optional intro message
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  respondedAt     DateTime?

  // Relations
  sender   User @relation("SentMatches", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User @relation("ReceivedMatches", fields: [receiverId], references: [id], onDelete: Cascade)

  @@unique([senderId, receiverId])
  @@index([status])
}

enum MatchStatus {
  PENDING
  ACCEPTED
  REJECTED
  EXPIRED
  UNMATCHED
}

// ==================== MESSAGING SYSTEM ====================

model Conversation {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  participants ConversationParticipant[]
  messages     Message[]
}

model ConversationParticipant {
  id             String   @id @default(uuid())
  conversationId String
  userId         String
  joinedAt       DateTime @default(now())
  lastReadAt     DateTime?
  isMuted        Boolean  @default(false)

  // Relations
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([conversationId, userId])
}

model Message {
  id             String      @id @default(uuid())
  conversationId String
  senderId       String
  receiverId     String
  content        String      @db.Text
  messageType    MessageType @default(TEXT)
  isRead         Boolean     @default(false)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  // Relations
  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User         @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver     User         @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
}

enum MessageType {
  TEXT
  IMAGE
  WORKOUT_INVITE
  LOCATION
}

// ==================== GOALS & PROGRESS TRACKING ====================

model Goal {
  id                String      @id @default(uuid())
  userId            String
  fitnessGoalTypeId String?
  title             String
  description       String?     @db.Text
  targetValue       Float?
  currentValue      Float?      @default(0)
  unit              String?     // e.g., "kg", "reps", "km", "minutes"
  startDate         DateTime    @default(now())
  targetDate        DateTime?
  status            GoalStatus  @default(IN_PROGRESS)
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  completedAt       DateTime?

  // Relations
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  fitnessGoalType FitnessGoalType? @relation(fields: [fitnessGoalTypeId], references: [id])
  milestones      GoalMilestone[]
  progressLogs    ProgressLog[]

  @@index([userId, status])
}

enum GoalStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  PAUSED
  ABANDONED
}

model GoalMilestone {
  id          String   @id @default(uuid())
  goalId      String
  title       String
  targetValue Float?
  isCompleted Boolean  @default(false)
  completedAt DateTime?
  dueDate     DateTime?
  createdAt   DateTime @default(now())

  // Relations
  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)
}

model ProgressLog {
  id        String   @id @default(uuid())
  goalId    String
  value     Float
  notes     String?
  loggedAt  DateTime @default(now())

  // Relations
  goal Goal @relation(fields: [goalId], references: [id], onDelete: Cascade)

  @@index([goalId, loggedAt])
}

// ==================== WORKOUT LOGGING ====================

model WorkoutLog {
  id            String   @id @default(uuid())
  userId        String
  workoutTypeId String?
  title         String
  description   String?  @db.Text
  duration      Int?     // in minutes
  caloriesBurned Int?
  intensity     Intensity?
  location      String?
  isPartnerWorkout Boolean @default(false)
  partnerId     String?  // Reference to partner user
  scheduledAt   DateTime?
  completedAt   DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  workoutType WorkoutType? @relation(fields: [workoutTypeId], references: [id])
  exercises   ExerciseLog[]

  @@index([userId, completedAt])
}

enum Intensity {
  LOW
  MODERATE
  HIGH
  VERY_HIGH
}

model ExerciseLog {
  id           String   @id @default(uuid())
  workoutLogId String
  exerciseName String
  sets         Int?
  reps         Int?
  weight       Float?   // in kg
  duration     Int?     // in seconds
  distance     Float?   // in km
  notes        String?
  order        Int      @default(0)
  createdAt    DateTime @default(now())

  // Relations
  workoutLog WorkoutLog @relation(fields: [workoutLogId], references: [id], onDelete: Cascade)
}

// ==================== NOTIFICATIONS ====================

model Notification {
  id        String           @id @default(uuid())
  userId    String
  type      NotificationType
  title     String
  body      String
  data      Json?            // Additional payload
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())
  readAt    DateTime?

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead, createdAt])
}

enum NotificationType {
  MATCH_REQUEST
  MATCH_ACCEPTED
  NEW_MESSAGE
  WORKOUT_REMINDER
  GOAL_MILESTONE
  GOAL_COMPLETED
  PARTNER_WORKOUT_INVITE
  SYSTEM
}

// ==================== SAFETY & MODERATION ====================

model BlockedUser {
  id            String   @id @default(uuid())
  blockingUserId String
  blockedUserId String
  reason        String?
  createdAt     DateTime @default(now())

  // Relations
  blockingUser User @relation("BlockingUser", fields: [blockingUserId], references: [id], onDelete: Cascade)
  blockedUser  User @relation("BlockedByUser", fields: [blockedUserId], references: [id], onDelete: Cascade)

  @@unique([blockingUserId, blockedUserId])
}

model Report {
  id             String       @id @default(uuid())
  reporterId     String
  reportedUserId String
  reason         ReportReason
  description    String?      @db.Text
  status         ReportStatus @default(PENDING)
  createdAt      DateTime     @default(now())
  resolvedAt     DateTime?
  resolvedBy     String?

  // Relations
  reporter     User @relation("ReportingUser", fields: [reporterId], references: [id], onDelete: Cascade)
  reportedUser User @relation("ReportedUser", fields: [reportedUserId], references: [id], onDelete: Cascade)
}

enum ReportReason {
  INAPPROPRIATE_CONTENT
  HARASSMENT
  SPAM
  FAKE_PROFILE
  SAFETY_CONCERN
  OTHER
}

enum ReportStatus {
  PENDING
  REVIEWED
  RESOLVED
  DISMISSED
}

// ==================== WORKOUT RESOURCES (Optional) ====================

model WorkoutResource {
  id          String       @id @default(uuid())
  title       String
  description String?      @db.Text
  type        ResourceType
  url         String?
  content     String?      @db.Text
  category    WorkoutCategory
  difficulty  FitnessLevel
  duration    Int?         // in minutes
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

enum ResourceType {
  ARTICLE
  VIDEO
  WORKOUT_PLAN
  EXERCISE_GUIDE
  NUTRITION_TIP
}